@page
@model InventorySystem.Pages.RegisterBranchModel
@{
}

<h2 class="text-primary" style="padding: 20px; font-size: 40px;">Register</h2>
<div class="container" style="padding: 30px;">
    <form method="post">
        <div class="form-group row mb-4">
            <div class="col-2">
                <label>Name</label>
            </div>
            <div class="col-4">
                <input type="text" id="b-name" class="form-control" asp-for="Branch.Name" />
                <span asp-validation-for="Branch.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <div class="col-2">
                <label>Phone Number</label>
            </div>
            <div class="col-4">
                <input type="text" id="b-phone" class="form-control" asp-for="Branch.PhoneNumber" />
                <span asp-validation-for="Branch.PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <div class="col-2">
                <label>Address</label>
            </div>
            <div class="col-4">
                <input type="text" id="b-address" class="form-control" asp-for="Branch.Address" />
                <span asp-validation-for="Branch.Address" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <div class="col-2">
                <label>User Name</label>
            </div>
            <div class="col-4">
                <input type="text" id="b-username" class="form-control" asp-for="User.UserName" />
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <div class="col-2">
                <label>User Password</label>
            </div>
            <div class="col-4">
                <input type="text" id="b-userpassword" class="form-control" asp-for="User.Password" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <div class="col-2 offset-2">
                <input type="submit" value="Register" class="btn btn-primary form-control" />
            </div>
        </div>
    </form>
</div>
