<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
               
                    @if (Context.Session.GetString("LoggedInUserName") != null)
                    {
                        <a class="navbar-brand" asp-area="" asp-page="/MainPage" style="font-size: 40px; font-weight: bold">I.M.S</a>

                    }
                    else
                    {
                        <a class="navbar-brand" asp-area="" asp-page="/Index" style="font-size: 40px; font-weight: bold">I.M.S</a>
                    }
               
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if (Context.Session.GetString("LoggedInUserName") != null)
                            {
                                <a class="nav-link" asp-area="" asp-page="/MainPage" style="font-size: 28px;">Home</a>
                            }
                            else
                            {
                                <a class="nav-link" asp-area="" asp-page="/Index" style="font-size: 28px;">Home</a>
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Support" style="font-size: 28px;">Support</a>
                        </li>
                    </ul>
                    <div class="navbar-text d-flex justify-content-end">
                        @if (Context.Session.GetString("LoggedInUserName") != null)
                        {
                            <span style="font-size: 24px;">Welcome, @Context.Session.GetString("LoggedInUserName")!</span>
                            <form method="post" asp-page="/LoginPage" asp-page-handler="Logout" id="logoutForm" style="float: right; margin-left: 10px;">
                                <button type="submit" class="btn btn-danger">Logout</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div id="ThresholdAlert" class="modal fade text-width:30%;", role="dialog">
               <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h2>Stock Alert</h2>
                        </div>
                        <div id="ThresholdAlertBody" class="modal-body alert alert-info">

                        </div>
                        <div id="ThresholdAlertBody2" class="modal-body alert alert-info">
                            Please Restock Items
                        </div>
                        <div class="modal-footer">
                            &nbsp;
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
               </div>
            </div>

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Inventory Management System - <a asp-area="" asp-page="/Support">Support</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>